@model IEnumerable<Product>
@{
    ViewData["Title"] = "All Products";
}

<section class="hero">
    <div class="content">
        <fieldset>
            <legend>GAMES</legend>
            <form asp-controller="Product" asp-action="Index" method="get" class="search-box">
                <input type="text" name="query" id="search-input" placeholder="Type to search..." />
                <button class="btn-search" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 24 24">
                        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5
                        16 5.91 13.09 3 9.5 3S3 5.91 3 9.5
                        5.91 16 9.5 16c1.61 0 3.09-.59
                        4.23-1.57l.27.28v.79l5 4.99L20.49
                        19l-4.99-5zm-6 0C7.01 14 5 11.99
                        5 9.5S7.01 5 9.5 5 14 7.01 14
                        9.5 11.99 14 9.5 14z" />
                    </svg>
                </button>
            </form>
            <div class="album py-5 bg-white">
                <div class="container">
                    <div class="row">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <div class="col-md-3">
                                    <div class="card mb-4 box-shadow">
                                        <img class="card-img-top" src="@item.Image" alt="@item.Name">
                                        <div class="card-body">
                                            <p class="card-text fw-bold">@item.Name</p>
                                            <p class="card-text">@item.Description</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Reviews</a>
                                                </div>
                                                <small class="text-muted">@item.Stars *</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <p class="text-center">No products found.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</section>

@section Scripts {
    <script>
        // Gerekirse JS ekleyebilirsiniz
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css" />
}