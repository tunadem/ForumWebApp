<div class="col-lg-8">
    <!-- Post content-->
    <article>
        <!-- Post header-->
        <header class="mb-4">
            <!-- Post title-->
            <h1 class="fw-bolder mb-1"> @Model.Name</h1>
            <h5 class="fw-bolder mb-1 mt-1">@Model.Address.Country</h5>
            <!-- Post meta content-->
            <div class="text-muted fst-italic mb-1">@Model.Address.City</div>
        </header>
        <!-- Preview image figure-->
        <figure class="mb-4"><img class="img-fluid rounded" src="@Model.Image" alt="..."></figure>
        <!-- Post content-->

    </article>
    <section class="mb-5">
                <div class="row">
                                             @foreach (var item in Model.Products)
                        {
                            <div class="col-md-3">
                                <div class="card mb-4 box-shadow">
                                    <img class="card-img-top" src="@item.Image" alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-text">@item.Name</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-outline-secondary">Review</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        } 
                </div>
        </fieldset>
</div>
</section> 

